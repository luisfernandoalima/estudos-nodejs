    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h2>Crie sua conta hoje</h2>
<div class="card">
    <div class="card-body">
        <form action="/usuarios/registro" method="post">
            <label for="nome">Nome:</label>
            <input type="text" name="nome" id="nome" class="form-control" required>
            <label for="email">E-mail:</label>
            <input type="email" name="email" id="email" class="form-control" required>
            <label for="senha">Senha:</label>
            <input type="password" name="senha" id="senha" class="form-control" required>
            
            <label for="senha2">Repetir senha:</label>
            <input type="password" name="senha2" id="senha2" class="form-control" required>
            <input type="submit" value="Criar conta" class="mt-4 btn btn-success">

        </form>
    </div>
</div>