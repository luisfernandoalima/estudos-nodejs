{{#each erros}}
    <div class="alert">{{text}}</div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="post">
            <label for="titulo">Titulo:</label>
            <input type="text" name="titulo" id="titulo" class="form-control">
            <br>
            <label for="slug">Slug</label>
            <input type="text" name="slug" id="slug" class="form-control">
            <br>
            <label for="descricao">Descrição:</label>
            <input type="text" name="descricao" id="descricao" class="form-control">
            <br>
            <label for="conteudo">Conteúdo:</label>
            <textarea name="conteudo" id="conteudo" class="form-control"></textarea>
            <br>
            <label for="categoria">Categoria: </label>
            <select name="categoria" id="categoria" class="form-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                    <option value="0">Nenhuma Categoria</option>
                {{/each}}
            </select>
            <br>
            <button type="submit" class="btn btn-success">Salvar Postagem</button>
        </form>
    </div>
</div>